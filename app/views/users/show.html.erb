<body>



<main>
 <p id="notice"></p>
 <div class="container px-5 px-sm-0">
 </div>
</main>



<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>


   <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>


</div>

<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
 <table>
   <% @books.each do |books| %>
   <tr>

     <td><%= link_to books.title, book_path(books.id) %></td>
     <td><%= books.body %></td>
   </tr>
    <% end %>
  </table>


  <footer>
 <div class="container mt-5">
  <div class="row">
    	<div class="mx-auto">
    	 <p>CopyRight Infratop.inc</p>
    	</div>
 </div>
</footer>
</body>
